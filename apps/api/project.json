{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/apps/api"
      ],
      "options": {
        "command": "nest build -p ./tsconfig.app.json",
        "args": []
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm -d dist/packages/shared/src/config/ormconfig.js migration:generate",
        "args": []
      },
      "dependsOn": [
        "build"
      ],
      "configurations": {
        "production": {
          "envFile": ".env.production"
        },
        "development": {
          "envFile": ".env.development"
        }
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm -d dist/packages/shared/src/config/ormconfig.js migration:run",
        "args": []
      },
      "dependsOn": [
        "build"
      ],
      "configurations": {
        "production": {
          "envFile": ".env.production"
        },
        "development": {
          "envFile": ".env.development"
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        "build"
      ],
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "file": "apps/api/Dockerfile"
      },
      "configurations": {
        "local": {
          "tags": [
            "uni-auto/api:latest"
          ],
          "push": false
        }
      }
    }
  },
  "tags": []
}